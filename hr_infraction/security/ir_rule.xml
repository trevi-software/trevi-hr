<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">

        <!-- Infractions -->

        <record id="property_rule_infraction_employee" model="ir.rule">
            <field name="name">Employee Own Infraction</field>
            <field name="model_id" ref="hr_infraction.model_hr_infraction" />
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('base.group_user'))]" />
        </record>

        <record id="property_rule_infraction_enter_and_approve" model="ir.rule">
            <field
                name="name"
            >Create and/or Take Action on Infraction for Subordinates</field>
            <field name="model_id" ref="hr_infraction.model_hr_infraction" />
            <field
                name="domain_force"
            >['|', ('employee_id', 'child_of', [user.employee_ids and user.employee_ids[0].id]), ('employee_id.department_id.manager_id.user_id.id', '=', user.id)]</field>
            <field
                name="groups"
                eval="[(4,ref('hr_infraction.group_hr_infraction_approve'))]"
            />
        </record>

        <record id="property_rule_infraction" model="ir.rule">
            <field name="name">Infraction Entry</field>
            <field name="model_id" ref="hr_infraction.model_hr_infraction" />
            <field name="domain_force">[(1,'=',1)]</field>
            <field
                name="groups"
                eval="[(4,ref('hr_infraction.group_hr_infraction_entry'))]"
            />
        </record>

        <!-- Infraction Actions -->

        <record id="property_rule_infraction_action_employee" model="ir.rule">
            <field name="name">Employee Own Infraction Actions</field>
            <field name="model_id" ref="hr_infraction.model_hr_infraction_action" />
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('base.group_user'))]" />
        </record>

        <record id="property_rule_infraction_action_enter_and_approve" model="ir.rule">
            <field
                name="name"
            >Create and/or Take Action on Infraction for Subordinates</field>
            <field name="model_id" ref="hr_infraction.model_hr_infraction_action" />
            <field
                name="domain_force"
            >['|', ('employee_id', 'child_of', [user.employee_ids and user.employee_ids[0].id]), ('employee_id.department_id.manager_id.user_id.id', '=', user.id)]</field>
            <field
                name="groups"
                eval="[(4,ref('hr_infraction.group_hr_infraction_approve'))]"
            />
        </record>

        <record id="property_rule_infraction_action" model="ir.rule">
            <field name="name">Infraction Action Entry</field>
            <field name="model_id" ref="hr_infraction.model_hr_infraction_action" />
            <field name="domain_force">[(1,'=',1)]</field>
            <field
                name="groups"
                eval="[(4,ref('hr_infraction.group_hr_infraction_entry'))]"
            />
        </record>

        <!-- Warnings -->

        <record id="property_rule_warning_employee" model="ir.rule">
            <field name="name">Employee Own Warning</field>
            <field name="model_id" ref="hr_infraction.model_hr_infraction_warning" />
            <field
                name="domain_force"
            >[('action_id.employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('base.group_user'))]" />
        </record>

        <record id="property_rule_warning_enter_and_approve" model="ir.rule">
            <field
                name="name"
            >Create and/or Take Action on Warnings for Subordinates</field>
            <field name="model_id" ref="hr_infraction.model_hr_infraction_warning" />
            <field
                name="domain_force"
            >['|', ('action_id.employee_id', 'child_of', [user.employee_ids and user.employee_ids[0].id]), ('employee_id.department_id.manager_id.user_id.id', '=', user.id)]</field>
            <field
                name="groups"
                eval="[(4,ref('hr_infraction.group_hr_infraction_approve'))]"
            />
        </record>

        <record id="property_rule_warning" model="ir.rule">
            <field name="name">Warning Entry</field>
            <field name="model_id" ref="hr_infraction.model_hr_infraction_warning" />
            <field name="domain_force">[(1,'=',1)]</field>
            <field
                name="groups"
                eval="[(4,ref('hr_infraction.group_hr_infraction_entry'))]"
            />
        </record>

    </data>
</odoo>
