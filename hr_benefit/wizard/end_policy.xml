<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="end_benefit_policy_form" model="ir.ui.view">
            <field name="name">hr.benefit.policy.end.form</field>
            <field name="model">hr.benefit.policy.end</field>
            <field name="arch" type="xml">
                <form string="End Benefit Policy">
                    <header>
                        <button
                            name="end_policy"
                            type="object"
                            string="Finish"
                            class="oe_highlight"
                        />
                    </header>
                    <newline />
                    <h3>
                        Please enter the last day of the policy in the field provided below.
                    </h3>
                    <group>
                        <group>
                            <field name="date" />
                        </group>
                        <group>
                        </group>
                    </group>
                </form>
            </field>
        </record>

    </data>
</odoo>
